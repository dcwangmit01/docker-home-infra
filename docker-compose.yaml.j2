version: "3"

services:
  dyndns:
    image: bshaw/route53-dyndns
    environment:
      AWS_ACCESS_KEY_ID: {{ dyndns.AWS_ACCESS_KEY_ID }}
      AWS_SECRET_ACCESS_KEY: {{ dyndns.AWS_SECRET_ACCESS_KEY }}
      AWS_CONNECTION_REGION: {{ dyndns.AWS_CONNECTION_REGION }}
      ROUTE53_DOMAIN_A_RECORD: {{ dyndns.ROUTE53_DOMAIN_A_RECORD }}
      ROUTE53_UPDATE_FREQUENCY: 3600
  nginx:
    image: nginx:alpine
    ports:
      - 80:80
      - 443:443
    volumes:
      - /docker-home-infra/volumes/nginx/web:/var/www
      - /docker-home-infra/conf/nginx_sites.conf:/etc/nginx/conf.d/default.conf:ro
      - /docker-home-infra/conf/htpasswd:/etc/nginx/htpasswd:ro
      - /docker-home-infra/volumes/letsencrypt/etc/letsencrypt:/etc/letsencrypt:ro
    networks:
      wp:
      caliwp:
      fax:
      registry:
  wp:
    image: wordpress:latest
    volumes:
    - /docker-home-infra/volumes/wp/var/www/html:/var/www/html
    - /docker-home-infra/conf/wordpress_uploads.ini:/usr/local/etc/php/conf.d/uploads.ini:ro
    networks:
      wp:
  wpdb:
    image: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: {{ wpdb.MYSQL_ROOT_PASSWORD }}
    volumes:
      - /docker-home-infra/volumes/wpdb/var/lib/mysql:/var/lib/mysql
    networks:
      wp:
        aliases:
        - mysql
  caliwp:
    image: wordpress:fpm-alpine
    volumes:
    - /docker-home-infra/volumes/caliwp/var/www/html:/var/www/html
    - /docker-home-infra/conf/wordpress_uploads.ini:/usr/local/etc/php/conf.d/uploads.ini:ro
    environment:
        - WORDPRESS_DB_NAME=wordpress
        - WORDPRESS_TABLE_PREFIX=wp_
        - WORDPRESS_DB_HOST=mysql
        - WORDPRESS_DB_PASSWORD={{ caliwpdb.MYSQL_ROOT_PASSWORD }}
    networks:
      caliwp:
  caliwpdb:
    image: mariadb
    environment:
      MYSQL_ROOT_PASSWORD: {{ caliwpdb.MYSQL_ROOT_PASSWORD }}
    volumes:
      - /docker-home-infra/volumes/caliwpdb/var/lib/mysql:/var/lib/mysql
    networks:
      caliwp:
        aliases:
        - mysql
  # To replace with gogs
  git:
    image: rastasheep/ubuntu-sshd
    ports:
      - "2222:22"
    command: bash -c "apt-get update; apt-get install -y git; rm -f /etc/ssh/ssh_host_*; dpkg-reconfigure openssh-server; useradd git -m -G root -s /bin/bash -p '*'; mkdir -p /home/git/.ssh; cp /tmp/authorized_keys /home/git/.ssh/authorized_keys; chown -R git:git /home/git; echo 'git ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/git; /usr/sbin/sshd -D"
    volumes:
      - /docker-home-infra/volumes/git/home/git:/home/git
      - /docker-home-infra/conf/authorized_keys:/tmp/authorized_keys:ro
  aptcacherng:
    image: minimum2scp/apt-cacher-ng
    ports:
      - "3142:3142"
  # environment:
  #    - ACNG_BACKENDS_DEBIAN=http://mirrors.us.kernel.org/debian/
  #    - ACNG_BACKENDS_UBUNTU=http://mirrors.us.kernel.org/ubuntu/
  #  volumes:
  #    - /docker-home-infra/volumes/aptcacherng/var/cache/apt-cacher-ng:/var/cache/apt-cacher-ng
  registry: # docker registry
    image: registry:2
    volumes:
    - /docker-home-infra/volumes/registry/var/lib/registry:/var/lib/registry
    networks:
      registry:
  vaporfax:
    image: bludesign/faxserver:latest
    volumes:
    - /docker-home-infra/volumes/vaporfax/FaxServer/Public:/FaxServer/Public
    environment:
    - MONGO_HOST=mongofax
    - MONGO_PORT=27017
    - VAPOR_HOST=0.0.0.0
    networks:
      fax:
    entrypoint:
    - bash
    - -c
    - while true; do sleep 10; date; echo Alive; done
  mongofax:
    image: mongo:4
    volumes:
    - /docker-home-infra/volumes/mongofax/data/configdb:/data/configdb
    - /docker-home-infra/volumes/mongofax/data/db:/data/db
    networks:
      fax:
networks:
  fax:
  wp:
  caliwp:
  registry:


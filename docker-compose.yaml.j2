registry: # docker registry
  image: registry:2
  ports:
  - 5000:5000
  volumes:
  - /kdk-home-infra/docker/registry/var/lib/registry:/var/lib/registry


mongofax:
  image: mongo:4
  restart: always
  volumes:
  - /kdk-home-infra/docker/mongofax/data/configdb:/data/configdb
  - /kdk-home-infra/docker/mongofax/data/db:/data/db

vaporfax:
  image: bludesign/faxserver:latest
# restart: always
  ports:
  - "20080:8080"
  volumes:
  - /kdk-home-infra/docker/vaporfax/FaxServer/Public:/FaxServer/Public
  - /kdk-home-infra/docker/vaporfax/FaxServer/Resources:/FaxServer/Resources
  environment:
  - MONGO_HOST=mongofax
  - MONGO_PORT=27017
  - VAPOR_HOST=0.0.0.0
  links:
  - mongofax


